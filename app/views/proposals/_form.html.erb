
<%= form_for @proposal do |f| %>

  <% if @proposal.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@proposal.errors.count, "error") %> prohibited
        this proposal from being saved:
      </h2>
      <ul>
        <% @proposal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <p>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.label :hypothesis %><br>
    <%= f.text_area :hypothesis %>
  </p>

  <%= f.select(:status) do %>
    <% [['Open'], ['In Progress'], ['Close'], ['Archived']].each do |c| %>
      <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
  <% end %>


  <p class="psubmit">
    <%= f.submit %>
  </p>

<% end %>
